<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/background" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:id="@+id/btn_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

<!--        <ImageView-->
<!--            android:id="@+id/sex"-->
<!--            android:layout_width="18dp"-->
<!--            android:layout_height="15dp"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:layout_marginLeft="46dp"-->
<!--            android:layout_marginBottom="2dp" />-->

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_active_follow_0"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/global"
            android:textSize="11sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_active_status"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/global"
            android:textSize="11sp"
            android:visibility="invisible" />

    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <com.yunbao.common.custom.ActiveVoiceLayout
        android:id="@+id/voice_layout"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_active_pub_voice" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:id="@+id/address_group"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_active_address"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_active_location_2" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gray1"
                android:textSize="11sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray1"
            android:textSize="11sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_active_comment" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="@string/video_comment"
                android:textColor="@color/gray1"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.yunbao.main.custom.ActiveLikeImage
                android:id="@+id/like_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_active_like_0" />

            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="@string/dian_zan"
                android:textColor="@color/gray1"
                android:textSize="12sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/icon_active_more" />


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />

</LinearLayout>