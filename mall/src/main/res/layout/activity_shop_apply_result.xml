<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/shop_apply_02" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/group_wait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mall_063"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mall_067"
                android:textColor="@color/textColor2"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mall_064"
                android:textColor="@color/global"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mall_065"
                android:textColor="@color/textColor2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btn_auth"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/bg_btn_common_02"
                android:gravity="center"
                android:text="@string/mall_066"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>