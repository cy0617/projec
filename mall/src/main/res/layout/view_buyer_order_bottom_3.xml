<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/btn_wuliu"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buyer_02"
        android:gravity="center"
        android:minWidth="86dp"
        android:onClick="orderDetailClick"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/mall_199"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buyer_03"
        android:gravity="center"
        android:minWidth="55dp"
        android:onClick="orderDetailClick"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/mall_201"
        android:textColor="@color/global"
        android:textSize="14sp" />

</LinearLayout>