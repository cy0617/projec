<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="8dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="7dp"
            android:rotation="90"
            android:scaleType="fitXY"
            android:src="@mipmap/arrow_01"
            android:tint="@color/gray1" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yunbao.common.custom.MyViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:canScroll="false" />


        <FrameLayout
            android:id="@+id/btn_dismiss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="invisible">

            <View
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#80000000" />

            <LinearLayout
                android:id="@+id/dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/btn_all_refund"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mall_218"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mall_219"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_receive"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mall_220"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_finish"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mall_221"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mall_222"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_all"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/mall_223"
                    android:textColor="@color/gray1"
                    android:textSize="14sp" />

            </LinearLayout>
        </FrameLayout>

    </FrameLayout>


</LinearLayout>