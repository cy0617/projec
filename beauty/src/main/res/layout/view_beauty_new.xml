<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_beauty_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="80dp"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_beauty_control"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/bg_beauty_navi"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_sticker_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_meng"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_beauty_sticker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/meng"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_beauty_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_beauty"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_beauty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/beauty"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/icon_beauty_camera_bottom"
                android:padding="5dp">

                <com.yunbao.beauty.ui.views.custom.ScaleImageButton
                    android:id="@+id/btn_beauty_take_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/icon_beauty_camera_top" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shape_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_beauty_shape"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_beauty_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/beauty_shape"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_specially_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_beauty_specially"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_beauty_special" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/beauty_specially"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_distortion_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_beauty_distortion"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_beauty_hh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/beauty_distortion"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_filter_entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_filter"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@null"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_beauty_filter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/filter"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_beauty_control_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >

        <com.yunbao.beauty.ui.views.custom.TextSeekBarNew
            android:id="@+id/tsb_beauty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:layout_above="@id/rl_beauty_control_container"
            app:maxProgress_new="9" />

        <RelativeLayout
            android:id="@+id/rl_beauty_control_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>